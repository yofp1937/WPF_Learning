<Window x:Class="Grid_Learning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grid_Learning"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="750">
    <Grid>
        <Grid.ColumnDefinitions>
            <!--고정 비율로 선언-->
            <ColumnDefinition Width="150"/>
            <!-- 남는 공간을 배율로 선언 -->
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
            <!-- Auto는 컨트롤의 크기를 요구하는 최소치로 맞춰줌-->
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!--열의 갯수만큼 RowDefinition 선언-->
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <!-- Span Test용 열 -->
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button Content="One"></Button>
        <Button Content="Two" Grid.Column="1" Grid.Row="0"></Button>
        <Button Content="Three" Grid.Column="2"></Button>
        <Button Content="Four" Grid.Column="3" Grid.Row="0"></Button>
        <Button Content="Five" Grid.Column="0" Grid.Row="1"></Button>
        <Button Content="Six" Grid.Column="1" Grid.Row="1"></Button>
        <Button Content="Seven" Grid.Column="2" Grid.Row="1"></Button>
        <Button Content="Eight" Grid.Column="3" Grid.Row="1"></Button>
        <Button Content="Nine" Grid.Column="0" Grid.Row="2"></Button>
        <!-- Span Test -->
        <Button Content="Ten" Grid.Column="1" Grid.RowSpan="2" Grid.Row="2"></Button>
        <Button Content="Eleven" Grid.Column="2" Grid.Row="2"></Button>
        <Button Content="Twelve" Grid.Column="3" Grid.Row="2"></Button>
        <Button Content="Thirty" Grid.Column="0" Grid.Row="4"></Button>
        <Button Content="Fourty" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2"></Button>
    </Grid>
</Window>
